<!DOCTYPE html>
<html lang="ja">
<head>
    <%- include("../../_share/metadata.ejs") %>
    <title>Shop</title>
    <%- include("../../_share/stylesheets.ejs") %>
    <link rel="stylesheet" href="/public/stylesheets/shop.css">
</head>
<body>
    <div class="outerframe">
        <%- include("../../_share/navbar.ejs") %>
        <main class="container">
            <div class="border-bottom my-5">
                <h1>口コミの投稿</h1>
            </div>
            <div>
                <form action="/account/reviews/regist/confirm" method="POST">
                    <input type="hidden", id="shopId", name="shopId", value="<%= shopId  %>">
                    <div class="form-group row">
                        <label for="shopName" class="col-sm-2 col-form-label">店舗</label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control plaintext" id="shopName", name="shopName", value="<%=shopName %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="visit" class="col-sm-2 col-form-label">訪問日</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="visit", name="visit", placeholder="yyyy/mm/dd", value="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="score" class="col-sm-2 col-form-label">評価</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="score" id="score">
                                <option>5.0</option>
                                <option>4.5</option>
                                <option>4.0</option>
                                <option>3.5</option>
                                <option selected>3.0</option>
                                <option>2.5</option>
                                <option>2.0</option>
                                <option>1.5</option>
                                <option>1.0</option>
                                <option>0.5</option>
                                <option>0.0</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label">本文</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" name="description" id="description" rows="5"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-10">
                            <input type="submit" class="btn btn-primary" value="確認">
                        </div>
                    </div>
                </form>
            </div>
        </main>

        <%- include("../../_share/footer.ejs") %>
    </div>
    <%- include("../../_share/javascripts.ejs") %>
</body>
</html>